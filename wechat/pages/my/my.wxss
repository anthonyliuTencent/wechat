/**index.wxss**/
.container {
  background-color: #ffffff;
  padding-top: 60px;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
  padding: 5px 10px;
  text-indent:2em;
  font-size: 18px;
}
.usermotto.area {
  padding-top:12px;
  font-family: 'MicroSoft YaHei';
  line-height: 1.5;
  text-indent:0;
  color: #8f8f8f;
  border-top: 1px solid #dfdfdf;
  font-size: 16px;
}