<!--index.wxml-->
<view class="container">
<view class="usermotto">
    <text class="user-motto">{{motto}}</text>
    <text class="famous">--{{famous}}</text>
  </view>
  <view class="navig-tab">
 <view class="navig-tab-area">
 <text style="padding-left: 7px;">值得阅读</text>
 <text class="navig-tab-subtitle">个人强烈推荐</text>
 </view>
 </view>
  <view class="book-area">
    <image bindtap="tapBook"data-book_id="{{item.book_id}}" wx:for="{{loveInfo}}" wx:key="id" wx:for-index="id" wx:for-item="item" class="cover-img" mode="widthFix" src="{{item.book_cover_img}}" >
    <text class="cover-text">{{item.book_name}}</text></image>
    <!-- <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo">点击收藏 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block> -->
  </view>
  <view class="navig-tab">
    <view class="navig-tab-area">
      <text style="padding-left: 7px;">更多好书</text>
    </view>
 </view>
 <view class="book-list" bindtap="tapOtherBook" data-book_id="{{item.book_id}}" wx:for="{{otherInfo}}" wx:key="id" wx:for-index="id" wx:for-item="item">
    <view class="book-list-image">
      <image class="book-list-cover" mode="widthFix" src="{{item.book_cover_img}}"></image>
    </view>
    <view class="book-list-text">
      <view><text class="book-list-text-title">{{item.book_name}}</text></view>
      <view class="book-list-text-content"><text>{{item.book_introduce}}</text></view>
      <view class="book-list-text-author">作者:黄易</view>
    </view>
 </view>
</view>

